<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.tempocontrol.Vista.RegistroProceso">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRO LADO"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/lbLado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de Lado"
                android:layout_below="@+id/lblTitulo"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/txtDescripcionLado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbLado"
                android:hint="Ingrese Lado"
                android:inputType="textCapCharacters"/>

            <Button
                android:id="@+id/btnRegistraLado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDescripcionLado"
                android:text="REGISTRAR LADO"
                android:textColor="@color/colorBlanco"
                android:background="@color/colorAzul"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <Button
                android:id="@+id/btnVuelvedesdeLado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VOLVER"
                android:textColor="@color/colorBlanco"
                android:background="@color/colorRojo"
                android:textStyle="bold"
                android:layout_marginTop="21dp"
                android:textSize="15dp"
                android:onClick="volverMenu"
                android:layout_below="@+id/btnRegistraLado"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/lblLadoID"
                android:layout_width="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnVuelvedesdeLado"
                android:text="ID                                 DESCRIPCIÃ“N"
                android:textColor="@color/colorNegro"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <GridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dgvLado"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblLadoID"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                />
        </RelativeLayout>





</RelativeLayout>